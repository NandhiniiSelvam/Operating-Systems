#include <stdio.h>

int main() {
    int n, bt[10], pr[10], i, j, temp;

    printf("Enter number of processes: ");
    scanf("%d",&n);

    for(i=0;i<n;i++){
        printf("Burst time and priority of P%d: ",i+1);
        scanf("%d%d",&bt[i],&pr[i]);
    }

    for(i=0;i<n;i++){
        for(j=i+1;j<n;j++){
            if(pr[i]>pr[j]){
                temp=pr[i]; pr[i]=pr[j]; pr[j]=temp;
                temp=bt[i]; bt[i]=bt[j]; bt[j]=temp;
            }
        }
    }

    printf("\nExecution order:\n");
    for(i=0;i<n;i++)
        printf("P%d ",i+1);

    return 0;
}
