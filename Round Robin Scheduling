#include <stdio.h>

int main() {
    int n, bt[10], rt[10], tq, i, time=0;

    printf("Enter number of processes: ");
    scanf("%d",&n);

    for(i=0;i<n;i++){
        printf("Burst time of P%d: ",i+1);
        scanf("%d",&bt[i]);
        rt[i]=bt[i];
    }

    printf("Enter time quantum: ");
    scanf("%d",&tq);

    while(1){
        int done=1;
        for(i=0;i<n;i++){
            if(rt[i]>0){
                done=0;
                if(rt[i]>tq){
                    time+=tq;
                    rt[i]-=tq;
                } else {
                    time+=rt[i];
                    rt[i]=0;
                }
            }
        }
        if(done) break;
    }

    printf("Total time: %d\n",time);
    return 0;
}
